# Build stage
FROM node:20-alpine AS build
WORKDIR /app

# Copy package files
COPY package*.json ./

# CÀI TẤT CẢ (bao gồm devDependencies) → BẮT BUỘC CHO BUILD
RUN npm ci

# Copy source code
COPY . .

# Build React
RUN npm run build

# Run stage
FROM nginx:alpine
COPY --from=build /app/build /usr/share/nginx/html
COPY nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]